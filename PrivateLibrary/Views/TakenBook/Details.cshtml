﻿@using PrivateLibrary.Data.Models;
@model TakenBook

<div>
    <div class="card" style=" padding: 25px 25px 25px 25px;">
        <div class="container">
            <h4>
                <b>
                    @Model.Title
                </b>
            </h4>

            <p>
                Author: @Model.Author
            </p>

            <p>
                Взета от: <a asp-controller="Account" asp-action="TakenBooks" asp-route-readerId="@Model.ReaderId">@Model.Reader?.FirstName @Model.Reader?.LastName</a>
            </p>

            <p>
                DateOfTaking: @Model.DateOfTaking
            </p>

            <p>
                DateOfReturn: @Model.DateOfReturn
            </p>

            <p>
                Price: @Model.Price
            </p>
        </div>
        @if (Model.Book.IsTaken)
        {
           <a asp-controller="TakenBook" asp-action="Return" asp-route-id="@Model.Id" class="btn btn-danger "> <i class="bi bi-person-dash-fill"></i>Върни</a> 
        }
    </div>
</div>